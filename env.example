# Environment Variables for Jira Board Application
# Copy this file to .env.local and fill in your actual values

# Jira API Configuration
VITE_JIRA_BASE_URL=https://your-domain.atlassian.net
VITE_JIRA_USERNAME=your-email@example.com
VITE_JIRA_API_TOKEN=your-api-token-here

# Optional: Jira Project Configuration
VITE_JIRA_PROJECT_KEY=YOUR_PROJECT_KEY
VITE_JIRA_BOARD_ID=your-board-id

# Development Settings
VITE_DEV_MODE=true
VITE_MOCK_API=true

# API Configuration
VITE_API_BASE_URL=https://your-api-server.com/api
VITE_API_TIMEOUT=30000
VITE_API_RETRY_ATTEMPTS=3

# Feature Flags
VITE_ENABLE_BULK_OPERATIONS=true
VITE_ENABLE_REAL_TIME_UPDATES=false
VITE_ENABLE_KEYBOARD_SHORTCUTS=true

# Debug Settings
VITE_DEBUG_MODE=false
VITE_LOG_LEVEL=info
